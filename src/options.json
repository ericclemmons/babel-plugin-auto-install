{
  "title": "Install Plugin options",
  "type": "object",
  "definitions": {
    "Dependencies": {
      "type": "object",
      "description": "Dependencies related options.",
      "link": "https://webpack.js.org/plugins/install-webpack-plugin/#dependencies",
      "additionalProperties": false,
      "properties": {
        "peer": {
          "type": "boolean",
          "description": "Install missing peer dependencies.",
          "link": "https://webpack.js.org/plugins/install-webpack-plugin/#peer"
        }
      }
    },
    "PackageManager": {
      "anyOf": [
        {
          "$ref": "#/definitions/PackageManagerEnum"
        },
        {
          "$ref": "#/definitions/PackageManagerOptions"
        },
        {
          "instanceof": "Function"
        }
      ],
      "description": "Package manager to use for installing dependencies.",
      "link": "https://webpack.js.org/plugins/install-webpack-plugin/#packagemanager"
    },
    "PackageManagerOptions": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "$ref": "#/definitions/PackageManagerEnum",
              "link": "https://webpack.js.org/plugins/install-webpack-plugin/#type"
            },
            "options": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "arguments": {
                  "type": "array",
                  "description": "Provide custom arguments for package manager.",
                  "link": "https://webpack.js.org/plugins/install-webpack-plugin/#arguments",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "dev": {
                  "type": "boolean",
                  "description": "Install as development dependencies.",
                  "link": "https://webpack.js.org/plugins/install-webpack-plugin/#dev"
                },
                "quiet": {
                  "type": "boolean",
                  "description": "Reduce the amount of console logging.",
                  "link": "https://webpack.js.org/plugins/install-webpack-plugin/#quiet"
                }
              }
            }
          }
        }
      ],
      "description": "package manager related options."
    },
    "PackageManagerEnum": {
      "enum": ["npm", "pnpm", "yarn"]
    },
    "Prompt": {
      "type": "boolean",
      "description": "Show a prompt to confirm installation.",
      "link": "https://webpack.js.org/plugins/install-webpack-plugin/#prompt"
    }
  },
  "additionalProperties": false,
  "properties": {
    "dependencies": {
      "$ref": "#/definitions/Dependencies"
    },
    "packageManager": {
      "$ref": "#/definitions/PackageManager"
    },
    "prompt": {
      "$ref": "#/definitions/Prompt"
    }
  }
}
